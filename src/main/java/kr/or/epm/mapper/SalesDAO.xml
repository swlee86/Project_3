<mapper namespace="kr.or.epm.DAO.SalesDAO">

<!-- 매출 등록시 데이터를 인서트 하는 쿼리문 -->
<insert id="insertSalesInfo" parameterType="kr.or.epm.VO.Sales">
	insert into sales(month, profit, expense) values(#{month},#{profit},#{expense})
</insert>

<select id="selectSalesInfo" resultType="kr.or.epm.VO.Sales">
	select month, profit, expense from sales order by month asc
</select>



</mapper>